@model RestoBook_MiniProjet.ViewModels.Menu.MenuCategoryViewModel

<div class="dashboard-container">
    <div class="page-header">
        <h2>Edit Category</h2>
    </div>

    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisplayOrder">Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="form-control" />
                <small class="form-text text-muted">Lower numbers appear first</small>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="IsActive" type="checkbox" class="form-check-input" id="isActiveCheck" />
                <label class="form-check-label" for="isActiveCheck">Active</label>
            </div>

            <div style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary">Update Category</button>
                <a href="/Menu/ManageCategories" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>