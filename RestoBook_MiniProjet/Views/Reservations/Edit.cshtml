@model RestoBook_MiniProjet.ViewModels.Reservations.ReservationEditViewModel

<div class="dashboard-container">
    <div class="page-header">
        <h2>Edit Reservation</h2>
    </div>

    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="validation-summary-errors"></div>

            <div class="form-group">
                <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                    Date & Time
                </label>
                <input asp-for="ReservationDate" type="datetime-local"
                       style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px;" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-group" style="margin-top: 16px;">
                    <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                        Guest Name
                    </label>
                    <input asp-for="GuestName"
                           style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px;" />
                    <span asp-validation-for="GuestName" class="text-danger"></span>
                </div>
            }

            <div class="form-group" style="margin-top: 16px;">
                <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                    Number of Guests
                </label>
                <input asp-for="NumberOfGuests" type="number" min="1" max="20"
                       style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px;" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                @if (!User.IsInRole("Admin"))
                {
                    <small style="display: block; margin-top: 4px; font-size: 12px; color: #6B7280;">
                        Changing the date or number of guests may result in a different table being assigned.
                    </small>
                }
            </div>

            <div class="form-group" style="margin-top: 16px;">
                <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                    Special Request (Optional)
                </label>
                <textarea asp-for="SpecialRequest" rows="3"
                          style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px; resize: vertical;"
                          placeholder="e.g. Window seat, high chair needed, birthday celebration..."></textarea>
                <span asp-validation-for="SpecialRequest" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-group" style="margin-top: 16px;">
                    <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                        Table
                    </label>
                    <select asp-for="RestaurantTableId"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px; background: white;">
                        @if (ViewBag.Tables != null)
                        {
                            @foreach (var t in ViewBag.Tables)
                            {
                                <option value="@t.Id">
                                    Table @t.TableNumber (Capacity: @t.Capacity)
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="RestaurantTableId" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-top: 16px;">
                    <label style="display: block; font-size: 14px; color: #374151; margin-bottom: 6px; font-weight: 500;">
                        Status
                    </label>
                    <select asp-for="Status"
                            style="width: 100%; padding: 10px 12px; border: 1px solid #E5E7EB; border-radius: 6px; font-size: 14px; background: white;">
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="RestaurantTableId" />
                <input type="hidden" asp-for="Status" />
            }

            <div style="margin-top: 24px; display: flex; gap: 12px;">
                <button type="submit" class="btn btn-primary">
                    Update Reservation
                </button>
                <a href="@(User.IsInRole("Admin") ? "/Reservations" : "/Reservations/MyReservations")" class="btn">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>