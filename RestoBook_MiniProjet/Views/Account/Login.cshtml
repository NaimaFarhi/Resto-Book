@model RestoBook_MiniProjet.ViewModels.Account.LoginViewModel

<!-- Use a wrapper to center the card -->
<div style="padding: 40px;">
    <div class="auth-wrapper">
        <div class="auth-card">
            
            <div class="auth-header">
                <h2>Welcome Back</h2>
                <p>Please enter your details to sign in</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors" style="margin-bottom:20px; text-align:left;"></div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" placeholder="name@company.com" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-actions">
                    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                </div>
            </form>

            <div class="auth-footer">
                <p>Don't have an account? <a asp-action="Register">Create an account</a></p>
            </div>
        </div>
    </div>
</div>
