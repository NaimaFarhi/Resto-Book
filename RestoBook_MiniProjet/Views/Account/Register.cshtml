@model RestoBook_MiniProjet.ViewModels.RegisterViewModel

<div style="padding: 40px;">
    <div class="auth-wrapper">
        <div class="auth-card">
            
            <div class="auth-header">
                <h2>Create Account</h2>
                <p>Join us! Please fill in your details</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors" style="margin-bottom:20px; text-align:left;"></div>

                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" placeholder="John Doe" />
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" placeholder="name@company.com" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <div class="form-actions">
                    <button class="btn btn-primary btn-block" type="submit">Register</button>
                </div>
            </form>

            <div class="auth-footer">
                <p>Already have an account? <a asp-action="Login">Sign in</a></p>
            </div>
        </div>
    </div>
</div>
