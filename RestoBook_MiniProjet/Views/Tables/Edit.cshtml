@model RestoBook_MiniProjet.ViewModels.Tables.TableEditViewModel

<div class="dashboard-container">
    <div class="form-container">
        <h2 class="form-title">Edit Table</h2>

        <form method="post">
            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="TableNumber"></label>
                <input asp-for="TableNumber" />
            </div>

            <div class="form-group">
                <label asp-for="Capacity"></label>
                <input asp-for="Capacity" />
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="IsActive" />
                    Active
                </label>
            </div>

            <div class="form-actions">
                <button class="btn btn-primary">Update</button>
                <a href="/Tables" class="btn">Cancel</a>
            </div>
        </form>
    </div>
</div>
